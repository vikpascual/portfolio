---
interface Props{
    image_url: string
    title: string
    description: string
    tags: Array<string>
    complexity: number
    year: number
}
const { image_url, title, description,tags, complexity, year } = Astro.props;

---
<article class="grid grid-cols-3 gap-4 mt-4 dark:bg-red-900	">
    <div>
        <img src={"/img/"+image_url} alt="">
    </div>
    <div class="col-span-2">
        <h3 class=" text-2xl font-bold">{title} ({year})</h3>
        <p>{description}</p>
        <p class="mt-2 flex flex-wrap gap-4">
        {tags.map((image_name)=>{
            return <img src={"/img/icons/"+image_name+".svg"} class="w-12 h-12" alt={image_name+" icon"}/>
        })}
        </p>
    </div>

</article>